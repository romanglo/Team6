<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Ellipse?>
<?import javafx.scene.text.Font?>

<AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="500"
	prefWidth="700" xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="newControllers.LoginController">
	<children>
		<ImageView fx:id="imageview_background" fitHeight="500"
			fitWidth="700" pickOnBounds="true" preserveRatio="false"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

		<Ellipse fill="TRANSPARENT" layoutX="107.0" layoutY="242.0"
			radiusX="93.0" radiusY="169.0" stroke="WHITE" strokeType="INSIDE"
			strokeWidth="5" />
		<Label layoutX="33.0" layoutY="183.0" text="User Name:"
			AnchorPane.leftAnchor="33.0" AnchorPane.topAnchor="183.0" />
		<TextField fx:id="textField_userName" layoutX="32.0"
			layoutY="203.0" prefHeight="25.0" prefWidth="149.0" stylesheets="@application.css"
			AnchorPane.leftAnchor="32.0" />
		<Label layoutX="33.0" layoutY="231.0" text="Password:"
			AnchorPane.leftAnchor="33.0" />
		<PasswordField fx:id="passwordField_userPassword"
			layoutX="32.0" layoutY="251.0" prefHeight="25.0" prefWidth="149.0"
			stylesheets="@application.css" AnchorPane.leftAnchor="32.0" />
		<Button fx:id="btn_login" layoutX="69.0" layoutY="296.0"
			mnemonicParsing="false" onAction="#onLoginButtonPressed" prefHeight="37.0"
			prefWidth="76.0" text="Login">
			<font>
				<Font size="16.0" />
			</font>
		</Button>
		<ImageView fx:id="imageview_usericon" fitHeight="100.0"
			fitWidth="105.0" layoutX="56.0" layoutY="77.0" pickOnBounds="true"
			preserveRatio="true" />

		<Button fx:id="btn_settings" layoutX="607.0" layoutY="3.0" mnemonicParsing="false"
			onAction="#onSettingsButtonPressed" prefHeight="25" prefWidth="25"
			AnchorPane.rightAnchor="3.0" AnchorPane.topAnchor="3.0">
			<graphic>
				<ImageView fx:id="btn_imageview_settings" fitHeight="25"
					fitWidth="25" pickOnBounds="true" preserveRatio="false" />
			</graphic>
		</Button>
	</children>
</AnchorPane>
