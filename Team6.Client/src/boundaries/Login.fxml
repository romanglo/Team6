<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="500"
	prefWidth="700" xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.LoginController">
	<children>
		<ImageView fx:id="imageview_background" fitHeight="500"
			fitWidth="700" pickOnBounds="true" preserveRatio="false"
			AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
			AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
		<Label layoutX="516.0" layoutY="184.0" text="User Name:"
			AnchorPane.leftAnchor="516.0" AnchorPane.topAnchor="184.0" />
		<TextField fx:id="textField_userName" layoutX="515.0"
			layoutY="204.0" prefHeight="25.0" prefWidth="149.0" stylesheets="@application.css"
			AnchorPane.leftAnchor="515.0" />
		<Label layoutX="516.0" layoutY="232.0" text="Password:"
			AnchorPane.leftAnchor="516.0" />
		<PasswordField fx:id="passwordField_userPassword"
			layoutX="515.0" layoutY="252.0" prefHeight="25.0" prefWidth="149.0"
			stylesheets="@application.css" AnchorPane.leftAnchor="515.0" />
		<Button fx:id="btn_login" layoutX="552.0" layoutY="297.0"
			mnemonicParsing="false" onAction="#onLoginButtonPressed" prefHeight="37.0"
			prefWidth="76.0" text="Login">
			<font>
				<Font size="16.0" />
			</font>
		</Button>

		<Button fx:id="btn_settings" layoutX="607.0" layoutY="3.0"
			mnemonicParsing="false" onAction="#onSettingsButtonPressed"
			prefHeight="25" prefWidth="25" AnchorPane.rightAnchor="3.0"
			AnchorPane.topAnchor="3.0">
			<graphic>
				<ImageView fx:id="btn_imageview_settings" fitHeight="25"
					fitWidth="25" pickOnBounds="true" preserveRatio="false" />
			</graphic>
		</Button>
	</children>
</AnchorPane>
