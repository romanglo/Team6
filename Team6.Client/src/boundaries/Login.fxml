<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="285.0" minWidth="380.0"
	nodeOrientation="LEFT_TO_RIGHT" prefHeight="372.0" prefWidth="400.0"
	xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.LoginController">
	<children>
		<TabPane layoutY="79.0" prefHeight="368.0" prefWidth="450.0"
			tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="5.0"
			AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
			AnchorPane.topAnchor="75.0">
			<tabs>
				<Tab closable="false" text="Client Status">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="372.0"
							prefWidth="450.0">
							<children>
								<Button fx:id="btn_connectToServer" layoutX="14.0"
									layoutY="38.0" mnemonicParsing="false" onAction="#ServerConnection"
									prefHeight="37.0" prefWidth="76.0" text="Start"
									AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="38.0">
									<font>
										<Font size="16.0" />
									</font>
								</Button>
								<Button fx:id="btn_disconnectFromServer" disable="true"
									layoutX="103.0" layoutY="38.0" mnemonicParsing="false"
									onAction="#ServerConnection" prefHeight="37.0" prefWidth="76.0"
									text="Stop" AnchorPane.leftAnchor="103.0" AnchorPane.topAnchor="38.0">
									<font>
										<Font size="16.0" />
									</font>
								</Button>
								<Circle fx:id="circle_connectedLight" fill="#909090e8"
									layoutX="296.0" layoutY="57.0" radius="17.0" stroke="BLACK"
									strokeType="INSIDE">
									<effect>
										<DropShadow color="#00000084" />
									</effect>
								</Circle>
								<Label layoutX="14.0" layoutY="14.0" text="Connectivity"
									AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0" />
								<Label layoutX="252.0" layoutY="14.0" text="Connectivity Status"
									AnchorPane.leftAnchor="252.0" AnchorPane.topAnchor="14.0" />
								<Circle fx:id="circle_disconnectedLight" fill="#ff1f1fe9"
									layoutX="349.0" layoutY="57.0" radius="17.0" stroke="BLACK"
									strokeType="INSIDE" AnchorPane.leftAnchor="332.0"
									AnchorPane.topAnchor="40.0">
									<effect>
										<DropShadow color="#00000084" />
									</effect>
								</Circle>
								<Separator layoutX="-1.0" layoutY="94.0" prefHeight="10.0"
									prefWidth="458.0" />

								<AnchorPane fx:id="anchorPane_login" disable="true"
									layoutX="-3.0" layoutY="97.0" prefHeight="241.0" prefWidth="401.0"
									AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
									AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="95.0">
									<children>
										<Label layoutX="14.0" layoutY="15.0" text="User Name"
											AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="15.0" />
										<Label layoutX="11.0" layoutY="50.0" text="Password"
											AnchorPane.leftAnchor="14.0" />
										<TextField fx:id="textField_userName" layoutX="113.0"
											layoutY="11.0" prefHeight="25.0" prefWidth="149.0"
											stylesheets="@application.css" AnchorPane.leftAnchor="113.0" />
										<PasswordField fx:id="passwordField_userPassword"
											layoutX="113.0" layoutY="45.0" prefHeight="25.0" prefWidth="149.0"
											stylesheets="@application.css" AnchorPane.leftAnchor="113.0" />
										<Button layoutX="287.0" layoutY="23.0" mnemonicParsing="false"
											onAction="#login" prefHeight="37.0" prefWidth="76.0" text="Login">
											<font>
												<Font size="16.0" />
											</font>
										</Button>
									</children>
								</AnchorPane>
							</children>
						</AnchorPane>
					</content>
				</Tab>
				<Tab closable="false" text="Settings">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
							prefWidth="200.0">
							<children>
								<TableView fx:id="setting_table" editable="true"
									layoutX="20.0" layoutY="18.0" AnchorPane.bottomAnchor="45.0"
									AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
									AnchorPane.topAnchor="0.0">
									<columns>
										<TableColumn fx:id="tablecolumn_setting" editable="false"
											minWidth="140.0" prefWidth="-1.0" sortable="false" text="Settings" />
										<TableColumn fx:id="tablecolumn_value" minWidth="140.0"
											prefWidth="-1.0" sortable="false" text="Values" />
									</columns>
									<columnResizePolicy>
										<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
									</columnResizePolicy>
								</TableView>
								<Button fx:id="btn_update_settings" mnemonicParsing="false"
									onAction="#updateSettingsFile" prefHeight="24.0" prefWidth="80.0"
									text="Update file" AnchorPane.bottomAnchor="11.0"
									AnchorPane.rightAnchor="14.0" />
							</children>
						</AnchorPane>
					</content>
				</Tab>
			</tabs>
		</TabPane>
		<ImageView fx:id="imageview_gif" fitHeight="84.0" fitWidth="59.0"
			layoutX="336.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true"
			AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="6.0" />
		<ImageView fx:id="imageview_title" fitHeight="48.0"
			fitWidth="154.0" layoutX="14.0" layoutY="6.0" pickOnBounds="true"
			AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="6.0" />
	</children>
</AnchorPane>
