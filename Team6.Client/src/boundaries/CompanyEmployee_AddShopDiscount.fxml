<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350.0" prefWidth="400.0"
	xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.CompanyEmployee_AddShopDiscountController">
	<children>
		<TableView fx:id="tableView_shopSales" layoutX="14.0" layoutY="75.0"
			prefHeight="240.0" prefWidth="364.0" AnchorPane.bottomAnchor="40.0"
			AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0">
			<columns>
				<TableColumn fx:id="tableColumn_itemInSaleID" minWidth="180.0"
					prefWidth="-1.0" text="ID" />
				<TableColumn fx:id="tableColumn_discountedPrice"
					minWidth="190.0" prefWidth="-1.0" text="Price" />
			</columns>
		</TableView>
		<Button fx:id="button_saveSalesChanges" disable="true" layoutX="334.0"
			layoutY="320.0" mnemonicParsing="false" onAction="#saveSalesCatalogChanges" text="Save changes"
			AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="15.0" />
		<Button fx:id="button_resetSalesChanges" disable="true" layoutX="198.0"
			layoutY="320.0" mnemonicParsing="false" onAction="#resetSalesCatalogChanges"
			text="Reset changes" AnchorPane.bottomAnchor="5.0"
			AnchorPane.rightAnchor="110.0" />
		<ComboBox fx:id="comboBox_storeList" layoutX="14.0" layoutY="320.0"
			onAction="#selectShop" prefWidth="150.0" AnchorPane.bottomAnchor="5.0"
			AnchorPane.leftAnchor="15.0" />
		<Label layoutX="15.0" layoutY="9.0" text="Shop ID:"
			AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="9.0">
			<font>
				<Font size="14.0" />
			</font>
		</Label>
		<Label fx:id="label_shopID" layoutX="80.0" layoutY="8.0"
			prefHeight="20.0" prefWidth="24.0">
			<font>
				<Font size="14.0" />
			</font>
		</Label>
		<Label layoutX="113.0" layoutY="8.0" prefHeight="25.0"
			prefWidth="150.0" text="discounted catalog">
			<font>
				<Font size="16.0" />
			</font>
		</Label>
		<Button fx:id="button_addNewDiscountedItem" layoutX="16.0"
			layoutY="37.0" mnemonicParsing="false" onAction="#addSalesToCatalog"
			text="Add new discount" />
		<Button fx:id="button_removeDiscountedItem" layoutX="139.0"
			layoutY="37.0" mnemonicParsing="false" onAction="#removeItemFromSalesCatalog"
			text="Remove discount" />
	</children>
</AnchorPane>
