<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="285.0" minWidth="380.0"
	nodeOrientation="LEFT_TO_RIGHT" prefHeight="300.0" prefWidth="450.0"
	xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="server.ServerController">
	<children>
		<TabPane fx:id="tabpane" layoutY="79.0" prefHeight="171.0"
			prefWidth="450.0" tabClosingPolicy="UNAVAILABLE"
			AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0"
			AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="75.0">
			<tabs>
				<Tab closable="false" text="Server Status">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="189.0"
							prefWidth="450.0">
							<children>
								<Button fx:id="btn_db_start" layoutX="14.0" layoutY="38.0"
									mnemonicParsing="false" onAction="#startDb" prefHeight="37.0"
									prefWidth="76.0" text="Start">
									<font>
										<Font size="16.0" />
									</font>
								</Button>
								<Button fx:id="btn_db_stop" disable="true" layoutX="103.0"
									layoutY="38.0" mnemonicParsing="false" onAction="#stopDb"
									prefHeight="37.0" prefWidth="76.0" text="Stop">
									<font>
										<Font size="16.0" />
									</font>
								</Button>
								<Circle fx:id="circle_db_on" fill="#909090e8" layoutX="285.0"
									layoutY="57.0" radius="17.0" stroke="BLACK" strokeType="INSIDE">
									<effect>
										<DropShadow color="#00000084" />
									</effect>
								</Circle>
								<Label layoutX="14.0" layoutY="14.0" text="Database" />
								<Label layoutX="271.0" layoutY="14.0" text="Database Status" />
								<Circle fx:id="circle_db_off" fill="#ff1f1fe9" layoutX="339.0"
									layoutY="57.0" radius="17.0" stroke="BLACK" strokeType="INSIDE">
									<effect>
										<DropShadow color="#00000084" />
									</effect>
								</Circle>
								<Button fx:id="btn_connectivity_start" layoutX="14.0"
									layoutY="121.0" mnemonicParsing="false" onAction="#startConnectivity"
									prefHeight="37.0" prefWidth="76.0" text="Start">
									<font>
										<Font size="16.0" />
									</font>
								</Button>
								<Button fx:id="btn_connectivity_stop" disable="true"
									layoutX="103.0" layoutY="121.0" mnemonicParsing="false"
									onAction="#stopConnectivity" prefHeight="37.0" prefWidth="76.0"
									text="Stop">
									<font>
										<Font size="16.0" />
									</font>
								</Button>
								<Circle fx:id="circle_connectivity_on" fill="#909090e8"
									layoutX="285.0" layoutY="140.0" radius="17.0" stroke="BLACK"
									strokeType="INSIDE">
									<effect>
										<DropShadow color="#00000084" />
									</effect>
								</Circle>
								<Label layoutX="14.0" layoutY="97.0" text="Connectivity" />
								<Label layoutX="271.0" layoutY="97.0" text="Connectivity Status" />
								<Circle fx:id="circle_connectivity_off" fill="#ff1f1fe9"
									layoutX="339.0" layoutY="140.0" radius="17.0" stroke="BLACK"
									strokeType="INSIDE">
									<effect>
										<DropShadow color="#00000084" />
									</effect>
								</Circle>
							</children>
						</AnchorPane>
					</content>
				</Tab>
				<Tab closable="false" text="Log">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
							prefWidth="200.0">
							<children>
								<TextArea fx:id="textarea_log" editable="false"
									layoutX="21.0" layoutY="27.0" scrollLeft="1.0"
									AnchorPane.bottomAnchor="11.0" AnchorPane.leftAnchor="21.0"
									AnchorPane.rightAnchor="13.0" AnchorPane.topAnchor="20.0">
									<opaqueInsets>
										<Insets />
									</opaqueInsets>
								</TextArea>
							</children>
						</AnchorPane>
					</content>
				</Tab>
				<Tab closable="false" text="Settings">
					<content>
						<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0"
							prefWidth="200.0">
							<children>
								<TableView fx:id="setting_table" editable="true"
									layoutX="20.0" layoutY="18.0" AnchorPane.bottomAnchor="45.0"
									AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
									AnchorPane.topAnchor="0.0">
									<columns>
										<TableColumn fx:id="tablecolumn_type" minWidth="140.0"
											prefWidth="-1.0" sortable="false" text="Types" />
										<TableColumn fx:id="tablecolumn_setting" editable="false"
											minWidth="140.0" prefWidth="-1.0" sortable="false" text="Settings" />
										<TableColumn fx:id="tablecolumn_value" minWidth="140.0"
											prefWidth="-1.0" sortable="false" text="Values" />
									</columns>
									<columnResizePolicy>
										<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
									</columnResizePolicy>
								</TableView>
								<Button fx:id="btn_update_settings" mnemonicParsing="false"
									onAction="#updateSettingsFile" prefHeight="24.0" prefWidth="80.0"
									text="Update file" AnchorPane.bottomAnchor="11.0"
									AnchorPane.rightAnchor="14.0" />
							</children>
						</AnchorPane>
					</content>
				</Tab>
			</tabs>
		</TabPane>
		<ImageView fx:id="imageview_gif" fitHeight="71.0" fitWidth="69.0"
			layoutX="336.0" layoutY="2.0" pickOnBounds="true" preserveRatio="true"
			AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" />

		<ImageView fx:id="imageview_title" fitHeight="43.0"
			fitWidth="198.0" layoutX="14.0" layoutY="16.0" pickOnBounds="true"
			preserveRatio="true" AnchorPane.leftAnchor="14.0"
			AnchorPane.topAnchor="14.0" />
	</children>
</AnchorPane>
